# Server Configuration
PORT=3000
NODE_ENV=development

# Application Settings
MAX_ROOMS=100
MAX_PLAYERS_PER_ROOM=10
MAX_MAP_SIZE_MB=10

# Session Configuration
SESSION_TIMEOUT_MINUTES=120
CLEANUP_INTERVAL_MINUTES=30

# Performance Settings
ENABLE_COMPRESSION=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security (Optional - for future features)
# JWT_SECRET=your-secret-key-here
# CORS_ORIGIN=http://localhost:3000

# Database (Optional - for future persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/roundtable
# REDIS_URL=redis://localhost:6379

# External Services (Optional - for future features)
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=
# GOOGLE_OAUTH_CLIENT_ID=
# GOOGLE_OAUTH_CLIENT_SECRET=

# Feature Flags
ENABLE_VOICE_CHAT=false
ENABLE_VIDEO_CHAT=false
ENABLE_PERSISTENCE=false
ENABLE_ANALYTICS=false

# Logging
LOG_LEVEL=info
LOG_FILE=round-table.log